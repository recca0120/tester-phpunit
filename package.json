{
  "name": "tester-phpunit",
  "main": "./lib/tester-phpunit",
  "author": [
    "yacut",
    "recca0120"
  ],
  "version": "0.1.1",
  "description": "PHPUnit test runner provider for the interactive tester",
  "keywords": [
    "test",
    "tester",
    "testing",
    "interactive",
    "phpunit",
    "wallaby.js"
  ],
  "repository": "https://github.com/recca0120/tester-phpunit",
  "bugs": {
    "url": "https://github.com/recca0120/tester-phpunit/issues"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "scripts": {
    "test": "(apm test) && (flow check) && (eslint . )"
  },
  "configSchema": {
    "scopes": {
      "title": "List of scopes to run PHPUnit on.",
      "type": "array",
      "default": [
        "**/tests/*Test.php"
      ],
      "items": {
        "type": "string"
      }
    },
    "binaryPath": {
      "title": "Path to the global phpunit binary",
      "description": "Optionally specify the path to the global phpunit binary",
      "type": "string",
      "default": ""
    },
    "args": {
      "title": "List of additional args to run PHPUnit.",
      "type": "array",
      "default": [
        "--colors"
      ],
      "items": {
        "type": "string"
      }
    }
  },
  "dependencies": {
    "atom-package-deps": "^4.4.1",
    "error-stack-parser": "^2.0.0",
    "lodash": "^4.17.4",
    "xml2js": "^0.4.17"
  },
  "package-deps": [
    "tester"
  ],
  "providedServices": {
    "tester": {
      "versions": {
        "1.0.0": "provideTester"
      }
    }
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "jasmine-fix": "^1.0.1"
  }
}
